<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.following_users.any? %>
      <h3>
        <%= @title %>( <%= @user.following_users.count%> ) 
      </h3>
      
      <ol class="user_info">
        <% @follow_users.each do |follow_user| %>
          <%= render 'other_info', locals: { user: follow_user } %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>