<h1>Edit My Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> 


      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :region %>
      <%= f.text_field :region %>
      
      <%= f.label :body %>
      <%= f.text_area :body %>



      <%= f.submit "Edit my profile", class: "btn btn-large btn-primary" %>
    <% end %>
    
  </div>
</div>